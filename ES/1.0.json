{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/techjb/Open-Real-Estate-Advertising-Schema/blob/master/ES/1.0.json",
  "title": "Open Real Estate Advertising Schema",
  "description": "Schema for publishing real estate advertisements in Spain",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "description": "Schema version number",
      "type": "number"
    },
    "schemaUrl": {
      "description": "Url of the schema",
      "type": "string",
      "format": "uri"
    },
    "updated": {
      "description": "Date of list update",
      "type": "string",
      "format": "date-time"
    },
    "advertisements": {
      "description": "List of advertisements",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "guid": {
            "description": "Globally Unique Identifier",
            "type": "string"
          },
          "listingStatus": {
            "description": "Listing status",
            "type": "string",
            "enum": [
              "published",
              "unpublished"
            ]
          },
          "listingDate": {
            "description": "Date on which the advertisement was published",
            "type": "string",
            "format": "date-time"
          },
          "unlistingDate": {
            "description": "Date on which the advertisement has been unpublished",
            "type": "string",
            "format": "date-time"
          },
          "operation": {
            "description": "Type of bussiness operation",
            "type": "string",
            "enum": [
              "buy",
              "sell",
              "rent",
              "holiday_rent",
              "share",
              "auction",
              "transfer"
            ]
          },
          "propertyType": {
            "description": "Type of property",
            "type": "string",
            "enum": [
              "home",
              "room",
              "premise",
              "industrial",
              "garage",
              "storage",
              "office",
              "land",
              "building"
            ]
          },
          "propertySubType": {
            "description": "Subtype of property",
            "type": "string",
            "enum": [
              // for propertyType:home 
              "flat",
              "appartment",
              "penthouse",
              "bungalow",
              "duplex",
              "detached",
              "semi_detached",
              "terraced",
              // for propertyType: land
              "developed",
              "buildable",
              "non_building"
            ]
          },
          "media": {
            "description": "Media resources urls",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "description": "Type of media",
                  "type": "string",
                  "enum": [ "image", "thumbnail", "video", "audio", "floorplan", "text", "other" ]
                },
                "title": {
                  "description": "Title of the media",
                  "type": "string"
                },
                "url": {
                  "description": "Url of media",
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "price": {
            "description": "Property price in €",
            "type": "number"
          },
          "description": {
            "description": "Description of the property",
            "type": "string"
          },
          "dataSourceName": {
            "description": "Data source name",
            "type": "string"
          },
          "dataSourceGuid": {
            "description": "Data source Globally Unique Identifier",
            "type": "string"
          },
          "dataSourceUpdate": {
            "description": "Date of the last update from data source",
            "type": "string",
            "format": "date-time"
          },
          "dataSourceUrl": {
            "description": "Data source url",
            "type": "string",
            "format": "uri"
          },
          "contact": {
            "description": "Listing contact information",
            "type": "object",
            "properties": {
              "name": {
                "description": "Contact name",
                "type": "string"
              },
              "phone": {
                "description": "Contact phone number",
                "type": "string"
              },
              "email": {
                "description": "Contact email address",
                "type": "string"
              },
              "url": {
                "description": "Contact url",
                "type": "string",
                "format": "uri"
              },
              "other": {
                "description": "Contact other (Skype, Twitter, Facebook, etc.)",
                "type": "string"
              }
            }
          },
          "address": {
            "description": "Property address information",
            "type": "object",
            "properties": {
              "formated": {
                "description": "Formated address",
                "type": "string"
              },
              "street": {
                "description": "Street name, house number, floor, appartment",
                "type": "string"
              },
              "district": {
                "description": "District name",
                "type": "string"
              },
              "postalCode": {
                "description": "Zip / Postal code",
                "type": "string"
              },
              "city": {
                "description": "City / Town / Village / Locality",
                "type": "string"
              },
              "province": {
                "description": "State / Province / County / Region",
                "type": "string"
              },
              "country": {
                "description": "ISO 3166 country code",
                "type": "string"
              }
            }
          },
          "latitude": {
            "description": "Property location latitude in decimal degrees",
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "longitude": {
            "description": "Property location longitude in decimal degrees",
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          "locationIsAccurate": {
            "description": "true if the latitude and longitude corresponds to the exact location of the property",
            "type": "boolean"
          },
          "cadastralReference": {
            "description": "Cadastral reference",
            "type": "string"
          },
          "propertySize": {
            "description": "Built-up area of the property in square metres",
            "type": "number"
          },
          "landSize": {
            "description": "Size of land in square meters",
            "type": "number"
          },
          "constructionYear": {
            "description": "Year of construction",
            "type": "integer"
          },
          "constructionStatus": {
            "description": "Status of construction",
            "type": "string",
            "enum": [
              "new",
              "good",
              "for_renovation",
              "refurbished"
            ]
          },
          "floors": {
            "description": "Number of building floors",
            "type": "integer"
          },
          "floor": {
            "description": "Property floor number",
            "type": "string"
          },
          "bedrooms": {
            "description": "Number of bedrooms",
            "type": "integer"
          },
          "bathrooms": {
            "description": "Number of bathrooms",
            "type": "integer"
          },
          "parkings": {
            "description": "Number of garaje parkings",
            "type": "integer"
          },
          "features": {
            "description": "Property features",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "terrace",
                "garden",
                "garage",
                "motorbike_garage",
                "pool",
                "lift",
                "disabled_access",
                "storage_room",
                "furnished",
                "non_furnished",
                "heating",
                "air_conditioning",
                "pets_allowed",
                "security_systems"
              ]
            }
          }
        },
        "required": [ "listingStatus", "operation", "propertyType" ]
      }
    }
  },
  "required": [ "schemaVersion", "updated" ]
}
